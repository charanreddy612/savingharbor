---
// src/pages/careers.astro
import Base from "../layouts/Base.astro";
import Header from "../components/Header.astro";
import Footer from "../components/Footer.astro";

const pageMeta = {
  title: "Careers at Saving Harbor",
  description:
    "Careers at Saving Harbor — we’re not hiring right now. Check back for future openings or reach out with your CV.",
};
---
<Base meta={pageMeta}>
  <Header />

  <main role="main" aria-labelledby="careers-heading" class="container mx-auto px-4 py-10">
    <header id="careers-heading" class="mb-6">
      <h1 class="site-hero text-on-surface">Careers</h1>
      <p class="mt-2 text-gray-400">
        We’re a small, fast-moving team building trust-first coupon experiences.
      </p>
    </header>

    <section class="card card-surface max-w-3xl mx-auto text-center py-12">
      <h2 class="text-xl font-semibold mb-3">No open roles right now</h2>
      <p class="text-gray-500 mb-6">
        We don’t have active job openings at the moment. We update this page when roles become available — please check back soon.
      </p>

      <p class="text-sm text-gray-500 mb-6">
        Prefer to be considered proactively? Send your CV and a short note to:
      </p>

      <div class="flex items-center justify-center gap-3">
        <a
          href="mailto:jobs.savingharbor@gmail.com"
          class="btn btn-primary"
          aria-label="Email jobs at Saving Harbor"
        >
          Email us your CV
        </a>
        <a href="/contact" class="btn btn-outline--light" aria-label="Contact page">
          Contact page
        </a>
      </div>

      <p class="text-xs text-gray-400 mt-6">
        We respect your privacy — submitted CVs are used only for recruitment purposes.
      </p>
    </section>

    <section class="mt-10">
      <h2 class="section-heading">Why work with us</h2>
      <ul class="prose text-on-surface max-w-none">
        <li>Remote-first, flexible hours.</li>
        <li>Meaningful equity and competitive compensation.</li>
        <li>Small team — high ownership and fast decision-making.</li>
      </ul>
    </section>
  </main>

  <Footer />
</Base>
