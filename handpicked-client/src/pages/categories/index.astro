---
// src/pages/categories/index.astro
import Base from "../../layouts/Base.astro";
import Header from "../../components/Header.astro";
import Footer from "../../components/Footer.astro";
import CategoriesGrid from "../../components/CategoriesGrid.jsx";

const pageTitle = "Categories - Saving Harbor";
const pageDesc =
  "Browse all categories and sub-categories with handpicked stores.";
const canonical = "https://savingharbor.com/categories";

const apiUrl = import.meta.env.PUBLIC_API_BASE_URL;
---

<Base meta={{ title: pageTitle, description: pageDesc, canonical }}>
  <Header />
  <main class="container mx-auto px-4 py-10">
    <div class="mb-8">
      <h1 class="text-3xl font-bold text-brand-primary">Categories</h1>
      <p class="mt-2 text-base text-gray-600 max-w-2xl">{pageDesc}</p>
    </div>

    <!-- React island: infinite scroll + letter filters + category cards -->
    <CategoriesGrid client:load apiUrl={apiUrl} />
  </main>
  <Footer />
</Base>
